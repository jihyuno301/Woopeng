<!DOCTYPE html>
<html lang="en">
<body>
			<main>
				<div class="container">
					<div class="form-divider"></div>
					<div >
						<div>
							<input type="text" id="userName" class="form-element" placeholder="Username" value="">
						</div>
						<div>
							<input type="email" id="userEmail" class="form-element" placeholder="Email" value="">
						</div>
						<div>
							<input type="password" id="userPassword" class="form-element" placeholder="Password" value="">
                        </div>
                        <div>
							<input type="text" id="userAccessToken" class="form-element" placeholder="accessToken" value="">
						</div>
						<div>
							<input type="text" id="userRefreshToken" class="form-element" placeholder="refreshToken" value="">
						</div>
						<div>
							<input type="text" id="userSeqNo" class="form-element" placeholder="userseqno" value="">
						</div>
					</div>

					<div>
						<button id="authBtn">인증 받기</button>
					</div>

					<div>
						<button id="signupBtn">Sign Up</button>
					</div>

					<div>
						Already have an account? <a href="login">Login</a>
					</div>

				</div>
			</main>
		</div>
	</div>
	<div class="sweet-loader">
		<div class="box">
		  	<div class="circle1"></div>
		  	<div class="circle2"></div>
		  	<div class="circle3"></div>
		</div>
	</div>

	<script src="js/jquery-3.2.1.min.js"></script>

	<script src="js/global.script.js"></script>

    <script>
        $("#authBtn").click(function(){
            var tmpWindow = window.open('about:blank')
            tmpWindow.location = "https://testapi.openbanking.or.kr/oauth/2.0/authorize?response_type=code&client_id=vA2Oekt2EegR48QNOaYzwwy7Jh3u8izqXAntc0Di&redirect_uri=http://localhost:3000/authResult&scope=login inquiry transfer&state=12345678901234567890123456789012&auth_type=0"
		})
		$("#signupBtn").click(function(){
            var userName = $("#userName").val();
            var userEmail = $("#userEmail").val();
            var userPassword = $("#userPassword").val();
            var userAccessToken = $("#userAccessToken").val();
            var userRefreshToken = $("#userRefreshToken").val();
			var userSeqNo = $("#userSeqNo").val();
			console.log(userName);
            $.ajax({
                url:'http://localhost:3000/signup',
                type : 'POST',
                data : {
                    userName : userName,
                    userEmail : userEmail,
                    userPassword : userPassword,
                    userAccessToken : userAccessToken,
                    userRefreshToken : userRefreshToken,
                    userSeqNo : userSeqNo
                },
                success:function(data){
					if(data == '1'){
						alert('signup success!!!!')
						window.location.href = '/login';
					}
					else {
						alert('signup fail....');
					}
                }
            })

		})
    </script>
	
</body>

</html>